---
import '../styles/global.css';
import Navigation from "../components/Navigation.astro";

const title: string = "About Me";
const identity = {
    firstName: "Jalil",
    country: "Azerbaijan",
    occupation: "Full Stack Web Developer",
    hobbies: ["gaming", "reading"],
};
const skills: string[] = ["HTML", "CSS", "JavaScript", "jQuery", "Tailwind", "Alpine"];

const happy: boolean = true;
const finished: boolean = false;
const goal: number = 3;

const operatingSystem: string = "Linux";
const quantity: number = 3;
const footwear: string = "boots";
const student: boolean = false;

const skillColor: string = "navy";
const skillWeight: string = 'bold';
const skillTransform: string = 'uppercase';
---
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="viewport" content="width=device-width"/>
    <meta name="generator" content={Astro.generator}/>
    <title>
        {title}
    </title>
    <style define:vars={{skillColor, skillWeight, skillTransform}}>
        h1 {
            color: purple;
            font-size: 4rem;
        }

        .skill {
            color: var(--skillColor);
            font-weight: var(--skillWeight);
            text-transform: var(--skillTransform);
        }
    </style>
</head>
<body>
<Navigation/>
<h1>
    {title}
</h1>
<p>
    Here are a few facts about me:
</p>
<ul>
    <li>
        My name is {identity.firstName}.
    </li>
    <li>
        I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    {identity.hobbies.length >= 2 &&
            <li>
                Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
            </li>
    }
</ul>
<p>
    My skills are:
</p>
<ul>
    {skills.map((skill) =>
            <li class="skill">
                {skill}
            </li>)}
</ul>
{happy && <p>I am happy to be learning Astro!</p>}

{finished && <p>I finished this tutorial!</p>}

{goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
<p>
    {operatingSystem}
</p>
{student && <p>I am still in school.</p>}
<p>
    I have {quantity + 8} pairs of {footwear}
</p>
{operatingSystem === "MacOS" ? <p>I am using a Mac.</p> : <p>I am not using a Mac.</p>}
</body>
</html>